<% layout("layouts/boilerplatecode.ejs") -%>

<div class="row">
  <div class="col-8 offset-2">
    <!-- Listing Details -->
    <h3><b><%= listing.title %></b></h3>

    <div class="card" style="width: 18rem;">
      <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="<%= listing.title %> image">
      <div class="card-body">
        <% if (listing.owner) { %>
          <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
        <% } else { %>
          <p class="card-text">Owner information not available.</p>
        <% } %>

        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">&#x20B9;<%= listing.price.toLocaleString("en-IN") %></p>
        <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
      </div>
    </div>

    <!-- Edit and Delete Buttons -->
    <% if (currUser && listing.owner && String(listing.owner._id) === String(currUser._id)) { %>
      <div class="mt-3">
        <a class="btn btn-dark" href="/listings/<%= listing._id %>/edit">Edit Listing</a>
        <br><br>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
          <button class="btn btn-dark add-btn" type="submit">Delete This Listing</button>
        </form>
      </div>
    <% } %>
  </div>
</div>

<!-- Reviews -->
<% if (currUser) { %>
  <div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave A Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating.">
        <% for (let i = 1; i <= 5; i++) { %>
          <input type="radio" id="first-rate<%= i %>" name="review[rating]" value="<%= i %>">
          <label for="first-rate<%= i %>" title="<%= ['Terrible','Not good','Average','Very good','Amazing'][i - 1] %>"><%= i %> star<%= i > 1 ? 's' : '' %></label>
        <% } %>
      </fieldset>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" class="form-control" required cols="30" rows="5"></textarea>
        <div class="invalid-feedback">Please submit some comments for review.</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
<% } %>

<hr>

<% if (listing.reviews.length > 0) { %>
  <div class="row">
    <p><b>All Reviews</b></p>
    <% for (let review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5><%= review.author ? review.author.username : 'Anonymous' %></h5>
          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %></p>
          <% if (currUser && review.author && String(review.author._id) === String(currUser._id)) { %>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-dark">DELETE</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
<% } %>

<!-- Map Integration -->
<% if (typeof mapToken !== "undefined" && listing.geometry && Array.isArray(listing.geometry.coordinates) && listing.geometry.coordinates.length === 2) { %>
  <div class="col-8 offset-3 mb-3">
    <h3>Where you will be</h3>
    <div id="map" style="width: 100%; height: 400px;"></div>
  </div>

  <script src="https://api.mapbox.com/mapbox-gl-js/v2.13.0/mapbox-gl.js"></script>
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.13.0/mapbox-gl.css" rel="stylesheet">

  <script>
    mapboxgl.accessToken = "<%= mapToken %>";
    const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;

    if (Array.isArray(coordinates) && coordinates.length === 2 && !isNaN(coordinates[0]) && !isNaN(coordinates[1])) {
      const map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: coordinates,
        zoom: 12
      });

      new mapboxgl.Marker().setLngLat(coordinates).addTo(map);
    } else {
      console.error("Invalid coordinates:", coordinates);
    }
  </script>
<% } else { %>
  <p class="text-muted text-center">Map data is not available.</p>
<% } %>
