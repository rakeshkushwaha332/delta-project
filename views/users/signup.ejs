<% layout("layouts/boilerplatecode.ejs") -%>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup On Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <!-- Username Field -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Username looks good</div>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="valid-feedback">Email looks good</div>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="valid-feedback">Password looks good</div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success">Signup</button>
        </form>
    </div>
</div>